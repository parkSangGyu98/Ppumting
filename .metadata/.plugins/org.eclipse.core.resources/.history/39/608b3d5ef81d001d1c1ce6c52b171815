<%@ page language="java" contentType="text/html; charset=UTF-8" pageEncoding="UTF-8"%>
<div id="copyright">
	<footer class="container">
			<div class="top-wrap">
				<a href="#" class="top">Top</a>
			</div>
			<script>
    $( document ).ready( function() {
      $(".top").hide();
      $(window).scroll(function(){
        if(	$(this).scrollTop() > 200){	
          $(".top").fadeIn();	
        }
        else{	
          $(".top").fadeOut();	
        }			
      });
      $(".top").click(function(){
        $('body,html').animate({
          scrollTop:0 
        },300 );
        return false;
      });
    });</script>
